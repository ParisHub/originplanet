<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Windows 10 Hello App</title>
  <HTA:APPLICATION
    ID="WinHello"
    APPLICATIONNAME="Windows 10 Hello App"
    BORDER="thick"
    CAPTION="yes"
    SHOWINTASKBAR="yes"
    RESIZE="yes"
    SINGLEINSTANCE="yes"
    SYSMENU="yes"
    SCROLL="no"
    WINDOWSTATE="normal"
  />
  <style>
    html,
    body {
      height: 100%;
    }

    body {
      font-family: Segoe UI, Tahoma, sans-serif;
      margin: 0;
      padding: 18px;
      background: linear-gradient(160deg, #f1f6ff 0%, #eaf0ff 45%, #f7efff 100%);
      color: #1c2435;
      box-sizing: border-box;
      overflow: auto;
    }

    h3 {
      margin: 0 0 14px 0;
      font-size: 24px;
      font-weight: 700;
      letter-spacing: 0.2px;
      color: #22314d;
    }

    .subtitle {
      margin: 0 0 18px 0;
      font-size: 13px;
      color: #5a6787;
    }

    .row {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 12px;
      flex-wrap: wrap;
    }

    .panel {
      background: rgba(255, 255, 255, 0.9);
      border: 1px solid #d9e2ff;
      border-radius: 16px;
      padding: 18px;
      box-shadow: 0 10px 30px rgba(39, 61, 120, 0.12);
      backdrop-filter: blur(2px);
      box-sizing: border-box;
    }

    button {
      padding: 8px 14px;
      font-size: 13px;
      border-radius: 10px;
      border: 1px solid #b8c6ef;
      width: auto;
      min-width: 0;
      white-space: nowrap;
      background: linear-gradient(180deg, #ffffff 0%, #edf2ff 100%);
      color: #22314d;
      cursor: pointer;
      transition: transform 0.06s ease, box-shadow 0.15s ease;
    }

    button:hover {
      box-shadow: 0 3px 10px rgba(61, 89, 168, 0.25);
    }

    button:active {
      transform: translateY(1px);
    }

    .primary {
      border-color: #3e6cf5;
      background: linear-gradient(180deg, #4b78ff 0%, #3f66da 100%);
      color: #fff;
      font-weight: 600;
    }

    .ghost {
      background: #f5f7ff;
    }

    .danger {
      border-color: #ff8a9e;
      background: linear-gradient(180deg, #ffe7ec 0%, #ffd7df 100%);
      color: #7c1129;
    }

    #launcherPanel,
    #snippetPanel,
    #dataToolsPanel {
      display: none;
    }

    #dataToolsPanel {
      overflow-y: auto;
    }

    #launcherButtons,
    #snippetButtons {
      display: flex;
      flex-direction: column;
      gap: 8px;
      margin-top: 10px;
      overflow-y: auto;
      overflow-x: hidden;
      padding-right: 4px;
      max-height: 420px;
    }

    .launcher-row,
    .snippet-row {
      display: flex;
      align-items: center;
      gap: 8px;
      background: #f8faff;
      border: 1px solid #dce6ff;
      border-radius: 12px;
      padding: 7px;
    }

    .launcher-item,
    .snippet-item {
      background: linear-gradient(180deg, #f7fbff 0%, #e8f1ff 100%);
      border: 1px solid #9dbbff;
      border-radius: 9px;
      width: auto;
      text-align: left;
      font-weight: 600;
    }

    .launcher-header-actions,
    .snippet-header-actions {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      margin-left: 12px;
    }

    .delete-item {
      display: none;
      border-radius: 9px;
      padding: 7px 11px;
      font-size: 12px;
    }

    #createDialog,
    #snippetCreateDialog {
      display: none;
      margin-top: 14px;
      padding: 14px;
      border: 1px solid #d5def8;
      border-radius: 12px;
      background: linear-gradient(180deg, #fcfdff 0%, #f5f8ff 100%);
      box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.8);
    }

    .form-row {
      margin-bottom: 10px;
    }

    .form-row label {
      display: block;
      margin-bottom: 4px;
      font-size: 12px;
      font-weight: 700;
      color: #3a4c76;
      text-transform: uppercase;
      letter-spacing: 0.3px;
    }

    .form-row input,
    .form-row textarea {
      width: 100%;
      box-sizing: border-box;
      padding: 8px;
      font-size: 13px;
      border-radius: 9px;
      border: 1px solid #c9d6ff;
      background: #fff;
      font-family: inherit;
    }

    .form-row textarea {
      resize: vertical;
      min-height: 80px;
    }

    #createError,
    #snippetCreateError {
      color: #b01537;
      font-size: 13px;
      min-height: 18px;
      margin-bottom: 6px;
      font-weight: 600;
    }

    #launcherStatus,
    #snippetStatus,
    #dataToolsStatus {
      font-size: 12px;
      color: #4c5878;
      margin-top: 8px;
      min-height: 16px;
      padding-left: 2px;
    }

    .panel-title {
      font-weight: 700;
      font-size: 18px;
      color: #2a3a61;
    }

    .info-note {
      margin: 10px 0 12px 0;
      font-size: 12px;
      color: #4b5878;
      background: #f3f7ff;
      border: 1px solid #d9e4ff;
      border-radius: 9px;
      padding: 8px 10px;
    }

  </style>
  <script language="javascript">
    var APP = {
      panels: ["homePanel", "launcherPanel", "snippetPanel", "dataToolsPanel"],
      dataFileName: "originplanet_data.opdb",
      obfuscationKey: "OriginPlanetLocalKey",
      obfuscationPrefix: "OPDB1:",
      states: {
        launcher: {
          entries: [],
          nextId: 1,
          deleteMode: false,
          listId: "launcherButtons",
          statusId: "launcherStatus",
          toggleId: "toggleDeleteButton",
          emptyText: "No entries yet. Click Create to add one.",
          kindLabel: "launcher entry"
        },
        snippet: {
          entries: [],
          nextId: 1,
          deleteMode: false,
          listId: "snippetButtons",
          statusId: "snippetStatus",
          toggleId: "toggleSnippetDeleteButton",
          emptyText: "No pasting extensions yet. Click Create to add one.",
          kindLabel: "snippet"
        }
      }
    };

    var activeDataFilePath = "";
    var pathCandidatesCache = null;

    function el(id) {
      return document.getElementById(id);
    }

    function setVisible(id, isVisible) {
      var node = el(id);
      if (node) {
        node.style.display = isVisible ? "block" : "none";
      }
    }

    function stateFor(kind) {
      return APP.states[kind];
    }

    function showOnlyPanel(panelId) {
      var i;
      for (i = 0; i < APP.panels.length; i++) {
        setVisible(APP.panels[i], APP.panels[i] === panelId);
      }
    }

    function updateListViewportMaxHeight() {
      var viewportHeight = document.documentElement && document.documentElement.clientHeight ? document.documentElement.clientHeight : 760;
      var targetHeight = viewportHeight - 320;
      var minimumHeight = 180;
      var launcherList = el(stateFor("launcher").listId);
      var snippetList = el(stateFor("snippet").listId);

      if (targetHeight < minimumHeight) {
        targetHeight = minimumHeight;
      }

      if (launcherList) {
        launcherList.style.maxHeight = targetHeight + "px";
      }

      if (snippetList) {
        snippetList.style.maxHeight = targetHeight + "px";
      }
    }

    function setInitialWindowSize() {
      var targetWidth = 1100;
      var targetHeight = 760;
      var maxWidth = screen && screen.availWidth ? screen.availWidth : 1600;
      var maxHeight = screen && screen.availHeight ? screen.availHeight : 1200;
      var rightMargin = 80;
      var bottomMargin = 80;
      var centeredX = 0;
      var centeredY = 0;

      if (!window.resizeTo) {
        return;
      }

      if (targetWidth > maxWidth - rightMargin) {
        targetWidth = maxWidth - rightMargin;
      }

      if (targetHeight > maxHeight - bottomMargin) {
        targetHeight = maxHeight - bottomMargin;
      }

      if (targetWidth < 760) {
        targetWidth = 760;
      }

      if (targetHeight < 520) {
        targetHeight = 520;
      }

      window.resizeTo(targetWidth, targetHeight);

      if (window.moveTo) {
        centeredX = Math.max(0, Math.floor((maxWidth - targetWidth) / 2));
        centeredY = Math.max(0, Math.floor((maxHeight - targetHeight) / 2));
        window.moveTo(centeredX, centeredY);
      }
    }

    function bindEnterToAction(inputId, action) {
      var node = el(inputId);
      if (!node) {
        return;
      }

      node.onkeypress = function(evt) {
        evt = evt || window.event;
        if (evt.keyCode === 13) {
          action();
        }
      };
    }

    function resetDeleteMode(kind) {
      var state = stateFor(kind);
      state.deleteMode = false;
      updateDeleteToggleButton(kind);
    }

    function openLauncher() {
      var count;
      showOnlyPanel("launcherPanel");
      resetDeleteMode("launcher");
      renderEntries("launcher");
      count = stateFor("launcher").entries.length;
      setStatus("launcher", "Loaded " + count + " entr" + (count === 1 ? "y" : "ies") + ".");
    }

    function openSnippetPanel() {
      var count;
      showOnlyPanel("snippetPanel");
      resetDeleteMode("snippet");
      renderEntries("snippet");
      count = stateFor("snippet").entries.length;
      setStatus("snippet", "Loaded " + count + " snippet" + (count === 1 ? "" : "s") + ".");
    }

    function openDataToolsPanel() {
      showOnlyPanel("dataToolsPanel");
      el("dataTxtPath").value = getDefaultTxtPath();
      setDataToolsStatus("Use Export to create a readable .txt or Import to load from one.");
    }

    function goHome() {
      resetDeleteMode("launcher");
      resetDeleteMode("snippet");
      hideCreateDialog();
      hideSnippetCreateDialog();
      showOnlyPanel("homePanel");
      setStatus("launcher", "");
      setStatus("snippet", "");
      setDataToolsStatus("");
    }

    function setStatus(kind, message) {
      var statusNode = el(stateFor(kind).statusId);
      if (statusNode) {
        statusNode.innerText = message;
      }
    }

    function setAllStatuses(message) {
      setStatus("launcher", message);
      setStatus("snippet", message);
      setDataToolsStatus(message);
    }

    function toggleDeleteMode(kind) {
      var state = stateFor(kind);
      state.deleteMode = !state.deleteMode;
      updateDeleteToggleButton(kind);
      renderEntries(kind);
      setStatus(kind, state.deleteMode ? "Delete mode enabled." : "Delete mode disabled.");
    }

    function toggleDeleteModeLauncher() {
      toggleDeleteMode("launcher");
    }

    function toggleDeleteModeSnippet() {
      toggleDeleteMode("snippet");
    }

    function updateDeleteToggleButton(kind) {
      var state = stateFor(kind);
      var toggleBtn = el(state.toggleId);

      if (!toggleBtn) {
        return;
      }

      toggleBtn.innerText = state.deleteMode ? "Done" : "Delete";
      toggleBtn.title = state.deleteMode ? "Exit delete mode" : "Enter delete mode";
    }

    function showCreateDialog() {
      setVisible("createDialog", true);
      el("createError").innerText = "";
      el("appName").focus();
    }

    function hideCreateDialog() {
      setVisible("createDialog", false);
      el("createError").innerText = "";
      el("appName").value = "";
      el("folderPath").value = "";
    }

    function showSnippetCreateDialog() {
      setVisible("snippetCreateDialog", true);
      el("snippetCreateError").innerText = "";
      el("snippetName").focus();
    }

    function hideSnippetCreateDialog() {
      setVisible("snippetCreateDialog", false);
      el("snippetCreateError").innerText = "";
      el("snippetName").value = "";
      el("snippetContent").value = "";
    }

    function createLauncherButton() {
      var name = trimValue(el("appName").value);
      var folderPath = trimValue(el("folderPath").value);
      var state = stateFor("launcher");

      if (!name || !folderPath) {
        el("createError").innerText = "Please provide both name and folder path.";
        return;
      }

      state.entries.push({
        id: state.nextId++,
        name: name,
        folderPath: folderPath
      });

      renderEntries("launcher");
      saveAllEntries();
      hideCreateDialog();
      setStatus("launcher", "Added launcher entry: " + name);
    }

    function createSnippetButton() {
      var name = trimValue(el("snippetName").value);
      var content = trimValue(el("snippetContent").value);
      var state = stateFor("snippet");

      if (!name || !content) {
        el("snippetCreateError").innerText = "Please provide both extension name and extension content.";
        return;
      }

      state.entries.push({
        id: state.nextId++,
        name: name,
        content: content
      });

      renderEntries("snippet");
      saveAllEntries();
      hideSnippetCreateDialog();
      setStatus("snippet", "Added snippet: " + name);
    }

    function removeEntry(kind, entryId) {
      var state = stateFor(kind);
      var idx = findEntryIndexById(state.entries, entryId);
      var removedName = "";

      if (idx === -1) {
        setStatus(kind, state.kindLabel + " not found.");
        return;
      }

      removedName = state.entries[idx].name;

      if (!confirm("Delete " + state.kindLabel + " '" + removedName + "'?")) {
        return;
      }

      state.entries.splice(idx, 1);
      renderEntries(kind);
      saveAllEntries();
      setStatus(kind, "Deleted " + state.kindLabel + ": " + removedName);
    }

    function findEntryIndexById(entries, entryId) {
      var i;
      for (i = 0; i < entries.length; i++) {
        if (entries[i].id === entryId) {
          return i;
        }
      }
      return -1;
    }

    function renderEntries(kind) {
      var state = stateFor(kind);
      var container = el(state.listId);
      var fragment = document.createDocumentFragment();
      var i;
      var row;
      var itemBtn;
      var deleteBtn;
      var entry;

      if (!container) {
        return;
      }

      container.innerHTML = "";

      if (!state.entries.length) {
        container.innerHTML = "<div>" + state.emptyText + "</div>";
        return;
      }

      for (i = 0; i < state.entries.length; i++) {
        entry = state.entries[i];
        row = document.createElement("div");
        row.className = kind === "launcher" ? "launcher-row" : "snippet-row";

        itemBtn = document.createElement("button");
        itemBtn.className = kind === "launcher" ? "launcher-item" : "snippet-item";
        itemBtn.innerText = entry.name;

        if (kind === "launcher") {
          itemBtn.title = entry.folderPath;
          itemBtn.onclick = (function(path) {
            return function() { launchPath(path); };
          })(entry.folderPath);
        } else {
          itemBtn.title = "Click to copy this extension";
          itemBtn.onclick = (function(name, content) {
            return function() { copySnippetContent(name, content); };
          })(entry.name, entry.content);
        }

        deleteBtn = document.createElement("button");
        deleteBtn.className = "delete-item danger";
        deleteBtn.style.display = state.deleteMode ? "inline-block" : "none";
        deleteBtn.innerText = "Delete";
        deleteBtn.title = kind === "launcher" ? "Delete this launcher entry" : "Delete this snippet";
        deleteBtn.onclick = (function(k, id) {
          return function() { removeEntry(k, id); };
        })(kind, entry.id);

        row.appendChild(itemBtn);
        row.appendChild(deleteBtn);
        fragment.appendChild(row);
      }

      container.appendChild(fragment);
    }

    function renderAllEntryLists() {
      renderEntries("launcher");
      renderEntries("snippet");
    }

    function copySnippetContent(name, content) {
      try {
        if (window.clipboardData && window.clipboardData.setData) {
          window.clipboardData.setData("Text", content);
          setStatus("snippet", "Copied pasting extension: " + name);
          return;
        }

        copyWithFallbackTextbox(content);
        setStatus("snippet", "Copied pasting extension: " + name);
      } catch (e) {
        setStatus("snippet", "Could not copy pasting extension. " + e.message);
      }
    }

    function copyWithFallbackTextbox(content) {
      var temp = document.createElement("textarea");
      temp.style.position = "fixed";
      temp.style.left = "-2000px";
      temp.style.top = "-2000px";
      temp.value = content;
      document.body.appendChild(temp);
      temp.focus();
      temp.select();
      document.execCommand("copy");
      document.body.removeChild(temp);
    }

    function launchPath(path) {
      try {
        var fso = new ActiveXObject("Scripting.FileSystemObject");

        if (!fso.FolderExists(path) && !fso.FileExists(path)) {
          setStatus("launcher", "Path not found: " + path);
          return;
        }

        var shell = new ActiveXObject("WScript.Shell");
        shell.Run('explorer "' + path + '"');
      } catch (e) {
        alert("Could not open folder path: " + path);
      }
    }

    function getDataFilePath() {
      var candidates = getDataFilePathCandidates();
      return candidates.length ? candidates[0] : APP.dataFileName;
    }

    function getDataFilePathCandidates() {
      var fso;
      var results = [];

      if (pathCandidatesCache && pathCandidatesCache.length) {
        return pathCandidatesCache.slice(0);
      }

      fso = new ActiveXObject("Scripting.FileSystemObject");

      addCandidatePath(results, fso, getPathFromPathname());
      addCandidatePath(results, fso, getCurrentFilePath());
      addCandidatePath(results, fso, getCurrentDirectoryFallback() + "\\originplanet.hta");

      pathCandidatesCache = results.slice(0);
      return results;
    }

    function addCandidatePath(results, fso, filePath) {
      var folderPath;

      if (!filePath) {
        return;
      }

      folderPath = fso.GetParentFolderName(filePath);
      if (!folderPath || folderPath === "") {
        return;
      }

      pushUnique(results, fso.BuildPath(folderPath, APP.dataFileName));
    }

    function pushUnique(list, value) {
      var i;

      for (i = 0; i < list.length; i++) {
        if (list[i].toLowerCase() === value.toLowerCase()) {
          return;
        }
      }

      list.push(value);
    }

    function saveAllEntries() {
      try {
        var fso = new ActiveXObject("Scripting.FileSystemObject");
        var dataPath = activeDataFilePath || getDataFilePath();
        var stream = fso.CreateTextFile(dataPath, true, false);
        var serialized = serializeAllEntries();
        var obfuscated = obfuscateData(serialized);

        stream.Write(obfuscated);
        stream.Close();
      } catch (e) {
        setAllStatuses("Could not save entries. " + e.message);
      }
    }

    function resetAllEntryState() {
      APP.states.launcher.entries = [];
      APP.states.launcher.nextId = 1;
      APP.states.snippet.entries = [];
      APP.states.snippet.nextId = 1;
    }

    function loadAllEntries() {
      try {
        var fso = new ActiveXObject("Scripting.FileSystemObject");
        var candidates = getDataFilePathCandidates();
        var dataPath = "";
        var stream;
        var raw;
        var decoded;
        var i;

        resetAllEntryState();

        for (i = 0; i < candidates.length; i++) {
          if (fso.FileExists(candidates[i])) {
            dataPath = candidates[i];
            break;
          }
        }

        activeDataFilePath = dataPath || (candidates.length ? candidates[0] : APP.dataFileName);

        if (!dataPath) {
          renderAllEntryLists();
          return;
        }

        stream = fso.OpenTextFile(dataPath, 1, false, 0);
        raw = stream.ReadAll();
        stream.Close();

        decoded = deobfuscateData(raw);
        deserializeAllEntries(decoded);
      } catch (e) {
        setAllStatuses("Could not load entries. " + e.message);
      }

      renderAllEntryLists();
    }

    function serializeAllEntries() {
      var lines = [];
      var launcherState = stateFor("launcher");
      var snippetState = stateFor("snippet");
      var i;

      for (i = 0; i < launcherState.entries.length; i++) {
        lines.push("L|" + escapeValue(launcherState.entries[i].name) + "|" + escapeValue(launcherState.entries[i].folderPath));
      }

      for (i = 0; i < snippetState.entries.length; i++) {
        lines.push("S|" + escapeValue(snippetState.entries[i].name) + "|" + escapeValue(snippetState.entries[i].content));
      }

      return lines.join("\n");
    }

    function deserializeAllEntries(serialized) {
      var normalized = String(serialized || "").replace(/\r/g, "");
      var lines = normalized.split("\n");
      var parts;
      var launcherState = stateFor("launcher");
      var snippetState = stateFor("snippet");
      var i;

      resetAllEntryState();

      for (i = 0; i < lines.length; i++) {
        if (!lines[i]) {
          continue;
        }

        parts = splitEscapedValues(lines[i], 3);
        if (!parts) {
          continue;
        }

        if (parts[0] === "L") {
          launcherState.entries.push({
            id: launcherState.nextId++,
            name: unescapeValue(parts[1]),
            folderPath: unescapeValue(parts[2])
          });
        } else if (parts[0] === "S") {
          snippetState.entries.push({
            id: snippetState.nextId++,
            name: unescapeValue(parts[1]),
            content: unescapeValue(parts[2])
          });
        }
      }
    }

    function obfuscateData(plainText) {
      var i;
      var mixed;
      var hex = "";
      var code;

      plainText = String(plainText || "");

      for (i = 0; i < plainText.length; i++) {
        mixed = plainText.charCodeAt(i) ^ APP.obfuscationKey.charCodeAt(i % APP.obfuscationKey.length) ^ ((i * 31) % 251);
        code = mixed.toString(16).toUpperCase();
        if (code.length < 2) {
          code = "0" + code;
        }
        hex += code;
      }

      return APP.obfuscationPrefix + hex;
    }

    function deobfuscateData(rawValue) {
      var payload = String(rawValue || "");
      var i;
      var chunk;
      var mixed;
      var out = "";

      if (payload.indexOf(APP.obfuscationPrefix) !== 0) {
        return payload;
      }

      payload = payload.substring(APP.obfuscationPrefix.length);

      if (payload.length % 2 !== 0) {
        return "";
      }

      for (i = 0; i < payload.length; i += 2) {
        chunk = parseInt(payload.substr(i, 2), 16);
        if (isNaN(chunk)) {
          continue;
        }

        mixed = chunk ^ APP.obfuscationKey.charCodeAt((i / 2) % APP.obfuscationKey.length) ^ (((i / 2) * 31) % 251);
        out += String.fromCharCode(mixed);
      }

      return out;
    }

    function exportDataToTxt() {
      var txtPath = trimValue(el("dataTxtPath").value);
      var lines;
      var stream;
      var totalCount = stateFor("launcher").entries.length + stateFor("snippet").entries.length;

      if (!txtPath) {
        setDataToolsStatus("Please provide a .txt path for export.");
        return;
      }

      try {
        lines = [];
        lines.push("# OriginPlanet readable export");
        lines.push("# This file is editable and importable.");
        lines.push("# Keep .opdb files user-specific and avoid sharing/editing .opdb directly.");
        lines.push("# Format: L|escapedName|escapedPath and S|escapedName|escapedContent");
        lines.push(serializeAllEntries());

        stream = new ActiveXObject("Scripting.FileSystemObject").CreateTextFile(txtPath, true, false);
        stream.Write(lines.join("\r\n"));
        stream.Close();

        setDataToolsStatus("Exported " + totalCount + " record" + (totalCount === 1 ? "" : "s") + " to: " + txtPath);
      } catch (e) {
        setDataToolsStatus("Export failed. " + e.message);
      }
    }

    function importDataFromTxt() {
      var txtPath = trimValue(el("dataTxtPath").value);
      var fso;
      var stream;
      var raw;
      var normalized;
      var lines;
      var filtered;
      var joined;
      var i;

      if (!txtPath) {
        setDataToolsStatus("Please provide a .txt path for import.");
        return;
      }

      try {
        fso = new ActiveXObject("Scripting.FileSystemObject");

        if (!fso.FileExists(txtPath)) {
          setDataToolsStatus("Import file not found: " + txtPath);
          return;
        }

        stream = fso.OpenTextFile(txtPath, 1, false, 0);
        raw = stream.ReadAll();
        stream.Close();

        normalized = String(raw || "").replace(/\r/g, "");
        lines = normalized.split("\n");
        filtered = [];

        for (i = 0; i < lines.length; i++) {
          if (!lines[i]) {
            continue;
          }

          if (lines[i].charAt(0) === "#") {
            continue;
          }

          filtered.push(lines[i]);
        }

        joined = filtered.join("\n");

        if (!joined) {
          setDataToolsStatus("Import file has no records (L|... or S|...).");
          return;
        }

        deserializeAllEntries(joined);
        renderAllEntryLists();
        saveAllEntries();

        setDataToolsStatus("Imported data from: " + txtPath + " (" + filtered.length + " record" + (filtered.length === 1 ? "" : "s") + ").");
      } catch (e) {
        setDataToolsStatus("Import failed. " + e.message);
      }
    }

    function getDefaultTxtPath() {
      var opdbPath = activeDataFilePath || getDataFilePath();

      if (!opdbPath) {
        return "originplanet_export.txt";
      }

      if (/\.opdb$/i.test(opdbPath)) {
        return opdbPath.replace(/\.opdb$/i, ".txt");
      }

      return opdbPath + ".txt";
    }

    function setDataToolsStatus(message) {
      var node = el("dataToolsStatus");
      if (node) {
        node.innerText = message;
      }
    }

    function trimValue(value) {
      return String(value || "").replace(/^\s+|\s+$/g, "");
    }

    function escapeValue(value) {
      return value
        .replace(/\\/g, "\\\\")
        .replace(/\|/g, "\\|")
        .replace(/\r/g, "")
        .replace(/\n/g, "\\n");
    }

    function unescapeValue(value) {
      return value
        .replace(/\\n/g, "\n")
        .replace(/\\\|/g, "|")
        .replace(/\\\\/g, "\\");
    }

    function splitEscapedValues(value, expectedParts) {
      var parts = [];
      var current = "";
      var escaped = false;
      var i;

      for (i = 0; i < value.length; i++) {
        if (escaped) {
          current += value.charAt(i);
          escaped = false;
          continue;
        }

        if (value.charAt(i) === "\\") {
          current += value.charAt(i);
          escaped = true;
          continue;
        }

        if (value.charAt(i) === "|") {
          parts.push(current);
          current = "";
          continue;
        }

        current += value.charAt(i);
      }

      parts.push(current);

      if (parts.length !== expectedParts) {
        return null;
      }

      return parts;
    }

    function getPathFromPathname() {
      var pathname = String(window.location.pathname || "");
      var path = decodeUriValue(pathname).replace(/\//g, "\\");

      if (path.charAt(0) === "\\" && path.length > 2 && path.charAt(2) === ":") {
        path = path.substring(1);
      }

      return path;
    }

    function getCurrentFilePath() {
      var href = String(window.location.href || "");
      var path = href;

      if (href.toLowerCase().indexOf("file:///") === 0) {
        path = href.substring(8);
      }

      path = decodeUriValue(path).replace(/\//g, "\\");

      if (path.charAt(0) === "\\" && path.length > 2 && path.charAt(2) === ":") {
        path = path.substring(1);
      }

      return path;
    }

    function decodeUriValue(value) {
      try {
        return decodeURIComponent(value);
      } catch (e) {
        return unescape(value);
      }
    }

    function getCurrentDirectoryFallback() {
      try {
        var shell = new ActiveXObject("WScript.Shell");
        return shell.CurrentDirectory;
      } catch (e) {
        return ".";
      }
    }

    window.onload = function() {
      updateDeleteToggleButton("launcher");
      updateDeleteToggleButton("snippet");
      loadAllEntries();
      setInitialWindowSize();
      showOnlyPanel("homePanel");
      updateListViewportMaxHeight();

      window.onresize = function() {
        updateListViewportMaxHeight();
      };

      bindEnterToAction("appName", createLauncherButton);
      bindEnterToAction("folderPath", createLauncherButton);
      bindEnterToAction("snippetName", createSnippetButton);
    };
  </script>
</head>
<body>
  <div id="homePanel" class="panel">
    <h3>OriginPlanet Launcher</h3>
    <p class="subtitle">A tiny in-window launcher with persistent shortcuts.</p>

    <div class="row">
      <button class="primary" onclick="openLauncher()">Open Path Opener Extension</button>
      <button class="primary" onclick="openSnippetPanel()">Open Pasting Extension</button>
      <button class="ghost" onclick="openDataToolsPanel()">Open Data Import / Export</button>
    </div>
  </div>

  <div id="launcherPanel" class="panel">
    <div class="row">
      <span class="panel-title">Path Opener Extension</span>
      <div class="launcher-header-actions">
        <button class="primary" onclick="showCreateDialog()">Create</button>
        <button id="toggleDeleteButton" class="ghost" onclick="toggleDeleteModeLauncher()">Delete</button>
        <button class="ghost" onclick="goHome()">Home</button>
      </div>
    </div>

    <div id="createDialog">
      <div class="form-row">
        <label for="appName">Path Name</label>
        <input id="appName" type="text" placeholder="Example: Work Docs Path" />
      </div>

      <div class="form-row">
        <label for="folderPath">Path Target</label>
        <input id="folderPath" type="text" placeholder="Example: C:\\Users\\You\\Documents" />
      </div>

      <div id="createError"></div>

      <div class="row">
        <button class="primary" onclick="createLauncherButton()">Confirm</button>
        <button class="ghost" onclick="hideCreateDialog()">Cancel</button>
      </div>
    </div>

    <div id="launcherButtons"></div>
    <div id="launcherStatus"></div>
  </div>

  <div id="snippetPanel" class="panel">
    <div class="row">
      <span class="panel-title">Pasting Extension</span>
      <div class="snippet-header-actions">
        <button class="primary" onclick="showSnippetCreateDialog()">Create</button>
        <button id="toggleSnippetDeleteButton" class="ghost" onclick="toggleDeleteModeSnippet()">Delete</button>
        <button class="ghost" onclick="goHome()">Home</button>
      </div>
    </div>

    <div id="snippetCreateDialog">
      <div class="form-row">
        <label for="snippetName">Pasting Extension Name</label>
        <input id="snippetName" type="text" placeholder="Example: Team Standup Update" />
      </div>

      <div class="form-row">
        <label for="snippetContent">Pasting Content</label>
        <textarea id="snippetContent" placeholder="Write the text you want copied when clicking this pasting extension button."></textarea>
      </div>

      <div id="snippetCreateError"></div>

      <div class="row">
        <button class="primary" onclick="createSnippetButton()">Confirm</button>
        <button class="ghost" onclick="hideSnippetCreateDialog()">Cancel</button>
      </div>
    </div>

    <div id="snippetButtons"></div>
    <div id="snippetStatus"></div>
  </div>

  <div id="dataToolsPanel" class="panel">
    <div class="row">
      <span class="panel-title">Data Import / Export</span>
      <div class="snippet-header-actions">
        <button class="ghost" onclick="goHome()">Home</button>
      </div>
    </div>

    <div class="info-note">
      Note for future maintenance: <strong>the <code>.opdb</code> file is user-specific and should stay next to each user's app copy.</strong>
      Do not share or manually edit <code>.opdb</code>; use export/import <code>.txt</code> for readable transfer.
    </div>

    <div class="form-row">
      <label for="dataTxtPath">Readable TXT Path</label>
      <input id="dataTxtPath" type="text" placeholder="Example: C:\\Users\\You\\Documents\\originplanet_export.txt" />
    </div>

    <div class="row">
      <button class="primary" onclick="exportDataToTxt()">Export to TXT</button>
      <button class="primary" onclick="importDataFromTxt()">Import from TXT</button>
    </div>

    <div id="dataToolsStatus"></div>
  </div>

</body>
</html>
