<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Windows 10 Hello App</title>
  <HTA:APPLICATION
    ID="WinHello"
    APPLICATIONNAME="Windows 10 Hello App"
    BORDER="dialog"
    CAPTION="yes"
    SHOWINTASKBAR="yes"
    SINGLEINSTANCE="yes"
    SYSMENU="yes"
    SCROLL="no"
    WINDOWSTATE="normal"
  />
  <style>
    body {
      font-family: Segoe UI, Tahoma, sans-serif;
      margin: 0;
      padding: 28px;
      background: linear-gradient(160deg, #f1f6ff 0%, #eaf0ff 45%, #f7efff 100%);
      color: #1c2435;
    }

    h3 {
      margin: 0 0 14px 0;
      font-size: 24px;
      font-weight: 700;
      letter-spacing: 0.2px;
      color: #22314d;
    }

    .subtitle {
      margin: 0 0 18px 0;
      font-size: 13px;
      color: #5a6787;
    }

    .row {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 12px;
      flex-wrap: wrap;
    }

    .panel {
      background: rgba(255, 255, 255, 0.9);
      border: 1px solid #d9e2ff;
      border-radius: 16px;
      padding: 18px;
      box-shadow: 0 10px 30px rgba(39, 61, 120, 0.12);
      backdrop-filter: blur(2px);
    }

    button {
      padding: 8px 14px;
      font-size: 13px;
      border-radius: 10px;
      border: 1px solid #b8c6ef;
      width: auto;
      min-width: 0;
      white-space: nowrap;
      background: linear-gradient(180deg, #ffffff 0%, #edf2ff 100%);
      color: #22314d;
      cursor: pointer;
      transition: transform 0.06s ease, box-shadow 0.15s ease;
    }

    button:hover {
      box-shadow: 0 3px 10px rgba(61, 89, 168, 0.25);
    }

    button:active {
      transform: translateY(1px);
    }

    .primary {
      border-color: #3e6cf5;
      background: linear-gradient(180deg, #4b78ff 0%, #3f66da 100%);
      color: #fff;
      font-weight: 600;
    }

    .ghost {
      background: #f5f7ff;
    }

    .danger {
      border-color: #ff8a9e;
      background: linear-gradient(180deg, #ffe7ec 0%, #ffd7df 100%);
      color: #7c1129;
    }

    #msg {
      min-width: 120px;
      font-size: 14px;
      color: #0f7a3f;
      font-weight: 700;
      background: #e9fff3;
      border: 1px solid #b7ebcc;
      border-radius: 999px;
      padding: 4px 10px;
      min-height: 18px;
      display: inline-flex;
      align-items: center;
    }

    #launcherPanel,
    #snippetPanel,
    #dataToolsPanel {
      display: none;
      margin-top: 14px;
    }

    #launcherButtons,
    #snippetButtons {
      display: flex;
      flex-direction: column;
      gap: 8px;
      margin-top: 10px;
    }

    .launcher-row,
    .snippet-row {
      display: flex;
      align-items: center;
      gap: 8px;
      background: #f8faff;
      border: 1px solid #dce6ff;
      border-radius: 12px;
      padding: 7px;
    }

    .launcher-item,
    .snippet-item {
      background: linear-gradient(180deg, #f7fbff 0%, #e8f1ff 100%);
      border: 1px solid #9dbbff;
      border-radius: 9px;
      width: auto;
      text-align: left;
      font-weight: 600;
    }

    .launcher-header-actions,
    .snippet-header-actions {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      margin-left: 12px;
    }

    .delete-item {
      display: none;
      border-radius: 9px;
      padding: 7px 11px;
      font-size: 12px;
    }

    #createDialog,
    #snippetCreateDialog {
      display: none;
      margin-top: 14px;
      padding: 14px;
      border: 1px solid #d5def8;
      border-radius: 12px;
      background: linear-gradient(180deg, #fcfdff 0%, #f5f8ff 100%);
      box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.8);
    }

    .form-row {
      margin-bottom: 10px;
    }

    .form-row label {
      display: block;
      margin-bottom: 4px;
      font-size: 12px;
      font-weight: 700;
      color: #3a4c76;
      text-transform: uppercase;
      letter-spacing: 0.3px;
    }

    .form-row input,
    .form-row textarea {
      width: 100%;
      box-sizing: border-box;
      padding: 8px;
      font-size: 13px;
      border-radius: 9px;
      border: 1px solid #c9d6ff;
      background: #fff;
      font-family: inherit;
    }

    .form-row textarea {
      resize: vertical;
      min-height: 80px;
    }

    #createError,
    #snippetCreateError {
      color: #b01537;
      font-size: 13px;
      min-height: 18px;
      margin-bottom: 6px;
      font-weight: 600;
    }

    #launcherStatus,
    #snippetStatus,
    #dataToolsStatus {
      font-size: 12px;
      color: #4c5878;
      margin-top: 8px;
      min-height: 16px;
      padding-left: 2px;
    }

    .panel-title {
      font-weight: 700;
      font-size: 18px;
      color: #2a3a61;
    }

    .info-note {
      margin: 10px 0 12px 0;
      font-size: 12px;
      color: #4b5878;
      background: #f3f7ff;
      border: 1px solid #d9e4ff;
      border-radius: 9px;
      padding: 8px 10px;
    }

  </style>
  <script language="javascript">
    var launcherEntries = [];
    var nextLauncherEntryId = 1;
    var launcherDeleteMode = false;

    var snippetEntries = [];
    var nextSnippetEntryId = 1;
    var snippetDeleteMode = false;

    var activeDataFilePath = "";
    var pathCandidatesCache = null;
    var panelIds = ["homePanel", "launcherPanel", "snippetPanel", "dataToolsPanel"];

    function el(id) {
      return document.getElementById(id);
    }

    function setVisible(id, isVisible) {
      el(id).style.display = isVisible ? "block" : "none";
    }

    function sayHello() {
      el("msg").innerText = "Hello";
    }

    function showOnlyPanel(panelId) {
      var i;

      for (i = 0; i < panelIds.length; i++) {
        setVisible(panelIds[i], panelIds[i] === panelId);
      }
    }

    function setAllStatuses(message) {
      setLauncherStatus(message);
      setSnippetStatus(message);
      setDataToolsStatus(message);
    }

    function findEntryIndexById(entries, entryId) {
      var i;

      for (i = 0; i < entries.length; i++) {
        if (entries[i].id === entryId) {
          return i;
        }
      }

      return -1;
    }

    function bindEnterToAction(inputId, action) {
      el(inputId).onkeypress = function(evt) {
        evt = evt || window.event;
        if (evt.keyCode === 13) {
          action();
        }
      };
    }

    function renderAllEntryLists() {
      renderLauncherEntries();
      renderSnippetEntries();
    }

    function openLauncher() {
      showOnlyPanel("launcherPanel");
      launcherDeleteMode = false;
      updateLauncherDeleteToggleButton();
      renderLauncherEntries();
      setLauncherStatus("Loaded " + launcherEntries.length + " entr" + (launcherEntries.length === 1 ? "y" : "ies") + ".");
    }

    function openSnippetPanel() {
      showOnlyPanel("snippetPanel");
      snippetDeleteMode = false;
      updateSnippetDeleteToggleButton();
      renderSnippetEntries();
      setSnippetStatus("Loaded " + snippetEntries.length + " snippet" + (snippetEntries.length === 1 ? "" : "s") + ".");
    }

    function openDataToolsPanel() {
      showOnlyPanel("dataToolsPanel");
      el("dataTxtPath").value = getDefaultTxtPath();
      setDataToolsStatus("Use Export to create a readable .txt or Import to load from one.");
    }

    function goHome() {
      launcherDeleteMode = false;
      snippetDeleteMode = false;
      updateLauncherDeleteToggleButton();
      updateSnippetDeleteToggleButton();
      hideCreateDialog();
      hideSnippetCreateDialog();
      showOnlyPanel("homePanel");
      setLauncherStatus("");
      setSnippetStatus("");
      setDataToolsStatus("");
    }

    function toggleDeleteMode() {
      launcherDeleteMode = !launcherDeleteMode;
      updateLauncherDeleteToggleButton();
      renderLauncherEntries();
      setLauncherStatus(launcherDeleteMode ? "Delete mode enabled." : "Delete mode disabled.");
    }

    function toggleSnippetDeleteMode() {
      snippetDeleteMode = !snippetDeleteMode;
      updateSnippetDeleteToggleButton();
      renderSnippetEntries();
      setSnippetStatus(snippetDeleteMode ? "Delete mode enabled." : "Delete mode disabled.");
    }

    function updateLauncherDeleteToggleButton() {
      var toggleBtn = el("toggleDeleteButton");
      if (!toggleBtn) {
        return;
      }
      toggleBtn.innerText = launcherDeleteMode ? "Done" : "Delete";
      toggleBtn.title = launcherDeleteMode ? "Exit delete mode" : "Enter delete mode";
    }

    function updateSnippetDeleteToggleButton() {
      var toggleBtn = el("toggleSnippetDeleteButton");
      if (!toggleBtn) {
        return;
      }
      toggleBtn.innerText = snippetDeleteMode ? "Done" : "Delete";
      toggleBtn.title = snippetDeleteMode ? "Exit delete mode" : "Enter delete mode";
    }

    function showCreateDialog() {
      setVisible("createDialog", true);
      el("createError").innerText = "";
      el("appName").focus();
    }

    function hideCreateDialog() {
      setVisible("createDialog", false);
      el("createError").innerText = "";
      el("appName").value = "";
      el("folderPath").value = "";
    }

    function showSnippetCreateDialog() {
      setVisible("snippetCreateDialog", true);
      el("snippetCreateError").innerText = "";
      el("snippetName").focus();
    }

    function hideSnippetCreateDialog() {
      setVisible("snippetCreateDialog", false);
      el("snippetCreateError").innerText = "";
      el("snippetName").value = "";
      el("snippetContent").value = "";
    }

    function createLauncherButton() {
      var name = trimValue(el("appName").value);
      var folderPath = trimValue(el("folderPath").value);

      if (!name || !folderPath) {
        el("createError").innerText = "Please provide both name and folder path.";
        return;
      }

      launcherEntries.push({
        id: nextLauncherEntryId++,
        name: name,
        folderPath: folderPath
      });

      renderLauncherEntries();
      saveAllEntries();
      hideCreateDialog();
      setLauncherStatus("Added launcher entry: " + name);
    }

    function createSnippetButton() {
      var name = trimValue(el("snippetName").value);
      var content = trimValue(el("snippetContent").value);

      if (!name || !content) {
        el("snippetCreateError").innerText = "Please provide both snippet name and snippet content.";
        return;
      }

      snippetEntries.push({
        id: nextSnippetEntryId++,
        name: name,
        content: content
      });

      renderSnippetEntries();
      saveAllEntries();
      hideSnippetCreateDialog();
      setSnippetStatus("Added snippet: " + name);
    }

    function removeLauncherEntry(entryId) {
      var idx = findEntryIndexById(launcherEntries, entryId);
      var removedName = "";

      if (idx === -1) {
        setLauncherStatus("Entry not found.");
        return;
      }

      removedName = launcherEntries[idx].name;

      if (!confirm("Delete launcher entry '" + removedName + "'?")) {
        return;
      }

      launcherEntries.splice(idx, 1);
      renderLauncherEntries();
      saveAllEntries();
      setLauncherStatus("Deleted launcher entry: " + removedName);
    }

    function removeSnippetEntry(entryId) {
      var idx = findEntryIndexById(snippetEntries, entryId);
      var removedName = "";

      if (idx === -1) {
        setSnippetStatus("Snippet not found.");
        return;
      }

      removedName = snippetEntries[idx].name;

      if (!confirm("Delete snippet '" + removedName + "'?")) {
        return;
      }

      snippetEntries.splice(idx, 1);
      renderSnippetEntries();
      saveAllEntries();
      setSnippetStatus("Deleted snippet: " + removedName);
    }

    function renderLauncherEntries() {
      var container = el("launcherButtons");
      var fragment = document.createDocumentFragment();
      var i;
      var row;
      var launchBtn;
      var deleteBtn;

      container.innerHTML = "";

      if (!launcherEntries.length) {
        container.innerHTML = "<div>No entries yet. Click Create to add one.</div>";
        return;
      }

      for (i = 0; i < launcherEntries.length; i++) {
        row = document.createElement("div");
        row.className = "launcher-row";

        launchBtn = document.createElement("button");
        launchBtn.className = "launcher-item";
        launchBtn.innerText = launcherEntries[i].name;
        launchBtn.title = launcherEntries[i].folderPath;
        launchBtn.onclick = (function(path) {
          return function() { launchPath(path); };
        })(launcherEntries[i].folderPath);

        deleteBtn = document.createElement("button");
        deleteBtn.className = "delete-item danger";
        deleteBtn.style.display = launcherDeleteMode ? "inline-block" : "none";
        deleteBtn.innerText = "Delete";
        deleteBtn.title = "Delete this launcher entry";
        deleteBtn.onclick = (function(id) {
          return function() { removeLauncherEntry(id); };
        })(launcherEntries[i].id);

        row.appendChild(launchBtn);
        row.appendChild(deleteBtn);
        fragment.appendChild(row);
      }

      container.appendChild(fragment);
    }

    function renderSnippetEntries() {
      var container = el("snippetButtons");
      var fragment = document.createDocumentFragment();
      var i;
      var row;
      var snippetBtn;
      var deleteBtn;

      container.innerHTML = "";

      if (!snippetEntries.length) {
        container.innerHTML = "<div>No snippets yet. Click Create to add one.</div>";
        return;
      }

      for (i = 0; i < snippetEntries.length; i++) {
        row = document.createElement("div");
        row.className = "snippet-row";

        snippetBtn = document.createElement("button");
        snippetBtn.className = "snippet-item";
        snippetBtn.innerText = snippetEntries[i].name;
        snippetBtn.title = "Click to copy this snippet";
        snippetBtn.onclick = (function(name, content) {
          return function() { copySnippetContent(name, content); };
        })(snippetEntries[i].name, snippetEntries[i].content);

        deleteBtn = document.createElement("button");
        deleteBtn.className = "delete-item danger";
        deleteBtn.style.display = snippetDeleteMode ? "inline-block" : "none";
        deleteBtn.innerText = "Delete";
        deleteBtn.title = "Delete this snippet";
        deleteBtn.onclick = (function(id) {
          return function() { removeSnippetEntry(id); };
        })(snippetEntries[i].id);

        row.appendChild(snippetBtn);
        row.appendChild(deleteBtn);
        fragment.appendChild(row);
      }

      container.appendChild(fragment);
    }

    function copySnippetContent(name, content) {
      try {
        if (window.clipboardData && window.clipboardData.setData) {
          window.clipboardData.setData("Text", content);
          setSnippetStatus("Copied snippet: " + name);
          return;
        }

        copyWithFallbackTextbox(content);
        setSnippetStatus("Copied snippet: " + name);
      } catch (e) {
        setSnippetStatus("Could not copy snippet. " + e.message);
      }
    }

    function copyWithFallbackTextbox(content) {
      var temp = document.createElement("textarea");
      temp.style.position = "fixed";
      temp.style.left = "-2000px";
      temp.style.top = "-2000px";
      temp.value = content;
      document.body.appendChild(temp);
      temp.focus();
      temp.select();
      document.execCommand("copy");
      document.body.removeChild(temp);
    }

    function launchPath(path) {
      try {
        var fso = new ActiveXObject("Scripting.FileSystemObject");

        if (!fso.FolderExists(path) && !fso.FileExists(path)) {
          setLauncherStatus("Path not found: " + path);
          return;
        }

        var shell = new ActiveXObject("WScript.Shell");
        shell.Run('explorer "' + path + '"');
      } catch (e) {
        alert("Could not open folder path: " + path);
      }
    }

    function getDataFilePath() {
      var candidates = getDataFilePathCandidates();
      return candidates.length ? candidates[0] : "originplanet_data.opdb";
    }

    function getDataFilePathCandidates() {
      var fso;
      var results = [];

      if (pathCandidatesCache && pathCandidatesCache.length) {
        return pathCandidatesCache.slice(0);
      }

      fso = new ActiveXObject("Scripting.FileSystemObject");

      addCandidatePath(results, fso, getPathFromPathname());
      addCandidatePath(results, fso, getCurrentFilePath());
      addCandidatePath(results, fso, getCurrentDirectoryFallback() + "\\originplanet.hta");

      pathCandidatesCache = results.slice(0);
      return results;
    }

    function addCandidatePath(results, fso, filePath) {
      var folderPath;

      if (!filePath) {
        return;
      }

      folderPath = fso.GetParentFolderName(filePath);
      if (!folderPath || folderPath === "") {
        return;
      }

      pushUnique(results, fso.BuildPath(folderPath, "originplanet_data.opdb"));
    }

    function pushUnique(list, value) {
      var i;

      for (i = 0; i < list.length; i++) {
        if (list[i].toLowerCase() === value.toLowerCase()) {
          return;
        }
      }

      list.push(value);
    }

    function saveAllEntries() {
      try {
        var fso = new ActiveXObject("Scripting.FileSystemObject");
        var dataPath = activeDataFilePath || getDataFilePath();
        var stream = fso.CreateTextFile(dataPath, true, false);
        var serialized = serializeAllEntries();
        var obfuscated = obfuscateData(serialized);

        stream.Write(obfuscated);
        stream.Close();
      } catch (e) {
        setAllStatuses("Could not save entries. " + e.message);
      }
    }

    function loadAllEntries() {
      try {
        var fso = new ActiveXObject("Scripting.FileSystemObject");
        var candidates = getDataFilePathCandidates();
        var dataPath = "";
        var stream;
        var raw;
        var decoded;
        var i;

        launcherEntries = [];
        nextLauncherEntryId = 1;
        snippetEntries = [];
        nextSnippetEntryId = 1;

        for (i = 0; i < candidates.length; i++) {
          if (fso.FileExists(candidates[i])) {
            dataPath = candidates[i];
            break;
          }
        }

        activeDataFilePath = dataPath || (candidates.length ? candidates[0] : "originplanet_data.opdb");

        if (!dataPath) {
          renderAllEntryLists();
          return;
        }

        stream = fso.OpenTextFile(dataPath, 1, false, 0);
        raw = stream.ReadAll();
        stream.Close();

        decoded = deobfuscateData(raw);
        deserializeAllEntries(decoded);
      } catch (e) {
        setAllStatuses("Could not load entries. " + e.message);
      }

      renderAllEntryLists();
    }

    function serializeAllEntries() {
      var lines = [];
      var i;

      for (i = 0; i < launcherEntries.length; i++) {
        lines.push(
          "L|" +
          escapeValue(launcherEntries[i].name) +
          "|" +
          escapeValue(launcherEntries[i].folderPath)
        );
      }

      for (i = 0; i < snippetEntries.length; i++) {
        lines.push(
          "S|" +
          escapeValue(snippetEntries[i].name) +
          "|" +
          escapeValue(snippetEntries[i].content)
        );
      }

      return lines.join("\n");
    }

    function deserializeAllEntries(serialized) {
      var normalized = String(serialized || "").replace(/\r/g, "");
      var lines = normalized.split("\n");
      var parts;
      var i;

      launcherEntries = [];
      nextLauncherEntryId = 1;
      snippetEntries = [];
      nextSnippetEntryId = 1;

      for (i = 0; i < lines.length; i++) {
        if (!lines[i]) {
          continue;
        }

        parts = splitEscapedValues(lines[i], 3);
        if (!parts) {
          continue;
        }

        if (parts[0] === "L") {
          launcherEntries.push({
            id: nextLauncherEntryId++,
            name: unescapeValue(parts[1]),
            folderPath: unescapeValue(parts[2])
          });
        } else if (parts[0] === "S") {
          snippetEntries.push({
            id: nextSnippetEntryId++,
            name: unescapeValue(parts[1]),
            content: unescapeValue(parts[2])
          });
        }
      }
    }

    function obfuscateData(plainText) {
      var key = "OriginPlanetLocalKey";
      var i;
      var mixed;
      var hex = "";
      var code;

      plainText = String(plainText || "");

      for (i = 0; i < plainText.length; i++) {
        mixed = plainText.charCodeAt(i) ^ key.charCodeAt(i % key.length) ^ ((i * 31) % 251);
        code = mixed.toString(16).toUpperCase();
        if (code.length < 2) {
          code = "0" + code;
        }
        hex += code;
      }

      return "OPDB1:" + hex;
    }

    function deobfuscateData(rawValue) {
      var key = "OriginPlanetLocalKey";
      var prefix = "OPDB1:";
      var payload = String(rawValue || "");
      var i;
      var chunk;
      var mixed;
      var out = "";

      if (payload.indexOf(prefix) !== 0) {
        return payload;
      }

      payload = payload.substring(prefix.length);

      if (payload.length % 2 !== 0) {
        return "";
      }

      for (i = 0; i < payload.length; i += 2) {
        chunk = parseInt(payload.substr(i, 2), 16);
        if (isNaN(chunk)) {
          continue;
        }

        mixed = chunk ^ key.charCodeAt((i / 2) % key.length) ^ ((((i / 2) * 31) % 251));
        out += String.fromCharCode(mixed);
      }

      return out;
    }

    function exportDataToTxt() {
      var txtPath = trimValue(el("dataTxtPath").value);
      var lines;
      var stream;

      if (!txtPath) {
        setDataToolsStatus("Please provide a .txt path for export.");
        return;
      }

      try {
        lines = [];
        lines.push("# OriginPlanet readable export");
        lines.push("# This file is editable and importable.");
        lines.push("# Keep .opdb files user-specific and avoid sharing/editing .opdb directly.");
        lines.push("# Format: L|escapedName|escapedPath and S|escapedName|escapedContent");
        lines.push(serializeAllEntries());

        stream = new ActiveXObject("Scripting.FileSystemObject").CreateTextFile(txtPath, true, false);
        stream.Write(lines.join("\r\n"));
        stream.Close();

        setDataToolsStatus("Exported " + (launcherEntries.length + snippetEntries.length) + " record" + ((launcherEntries.length + snippetEntries.length) === 1 ? "" : "s") + " to: " + txtPath);
      } catch (e) {
        setDataToolsStatus("Export failed. " + e.message);
      }
    }

    function importDataFromTxt() {
      var txtPath = trimValue(el("dataTxtPath").value);
      var fso;
      var stream;
      var raw;
      var normalized;
      var lines;
      var filtered;
      var joined;
      var i;

      if (!txtPath) {
        setDataToolsStatus("Please provide a .txt path for import.");
        return;
      }

      try {
        fso = new ActiveXObject("Scripting.FileSystemObject");

        if (!fso.FileExists(txtPath)) {
          setDataToolsStatus("Import file not found: " + txtPath);
          return;
        }

        stream = fso.OpenTextFile(txtPath, 1, false, 0);
        raw = stream.ReadAll();
        stream.Close();

        normalized = String(raw || "").replace(/\r/g, "");
        lines = normalized.split("\n");
        filtered = [];

        for (i = 0; i < lines.length; i++) {
          if (!lines[i]) {
            continue;
          }

          if (lines[i].charAt(0) === "#") {
            continue;
          }

          filtered.push(lines[i]);
        }

        joined = filtered.join("\n");

        if (!joined) {
          setDataToolsStatus("Import file has no records (L|... or S|...).");
          return;
        }

        deserializeAllEntries(joined);
        renderAllEntryLists();
        saveAllEntries();

        setDataToolsStatus("Imported data from: " + txtPath + " (" + filtered.length + " record" + (filtered.length === 1 ? "" : "s") + ").");
      } catch (e) {
        setDataToolsStatus("Import failed. " + e.message);
      }
    }

    function getDefaultTxtPath() {
      var opdbPath = activeDataFilePath || getDataFilePath();

      if (!opdbPath) {
        return "originplanet_export.txt";
      }

      if (/\.opdb$/i.test(opdbPath)) {
        return opdbPath.replace(/\.opdb$/i, ".txt");
      }

      return opdbPath + ".txt";
    }

    function setLauncherStatus(message) {
      el("launcherStatus").innerText = message;
    }

    function setSnippetStatus(message) {
      el("snippetStatus").innerText = message;
    }

    function setDataToolsStatus(message) {
      el("dataToolsStatus").innerText = message;
    }

    function trimValue(value) {
      return value.replace(/^\s+|\s+$/g, "");
    }

    function escapeValue(value) {
      return value
        .replace(/\\/g, "\\\\")
        .replace(/\|/g, "\\|")
        .replace(/\r/g, "")
        .replace(/\n/g, "\\n");
    }

    function unescapeValue(value) {
      return value
        .replace(/\\n/g, "\n")
        .replace(/\\\|/g, "|")
        .replace(/\\\\/g, "\\");
    }

    function splitEscapedValues(value, expectedParts) {
      var parts = [];
      var current = "";
      var escaped = false;
      var i;

      for (i = 0; i < value.length; i++) {
        if (escaped) {
          current += value.charAt(i);
          escaped = false;
          continue;
        }

        if (value.charAt(i) === "\\") {
          current += value.charAt(i);
          escaped = true;
          continue;
        }

        if (value.charAt(i) === "|") {
          parts.push(current);
          current = "";
          continue;
        }

        current += value.charAt(i);
      }

      parts.push(current);

      if (parts.length !== expectedParts) {
        return null;
      }

      return parts;
    }

    function getPathFromPathname() {
      var pathname = String(window.location.pathname || "");
      var path = decodeUriValue(pathname).replace(/\//g, "\\");

      if (path.charAt(0) === "\\" && path.length > 2 && path.charAt(2) === ":") {
        path = path.substring(1);
      }

      return path;
    }

    function getCurrentFilePath() {
      var href = String(window.location.href || "");
      var path = href;

      if (href.toLowerCase().indexOf("file:///") === 0) {
        path = href.substring(8);
      }

      path = decodeUriValue(path).replace(/\//g, "\\");

      if (path.charAt(0) === "\\" && path.length > 2 && path.charAt(2) === ":") {
        path = path.substring(1);
      }

      return path;
    }

    function decodeUriValue(value) {
      try {
        return decodeURIComponent(value);
      } catch (e) {
        return unescape(value);
      }
    }

    function getCurrentDirectoryFallback() {
      try {
        var shell = new ActiveXObject("WScript.Shell");
        return shell.CurrentDirectory;
      } catch (e) {
        return ".";
      }
    }

    window.onload = function() {
      updateLauncherDeleteToggleButton();
      updateSnippetDeleteToggleButton();
      loadAllEntries();

      bindEnterToAction("appName", createLauncherButton);
      bindEnterToAction("folderPath", createLauncherButton);
      bindEnterToAction("snippetName", createSnippetButton);
    };
  </script>
</head>
<body>
  <h3>OriginPlanet Launcher</h3>
  <p class="subtitle">A tiny in-window launcher with persistent shortcuts.</p>

  <div id="homePanel" class="panel">
    <div class="row">
      <button class="primary" onclick="sayHello()">Press me</button>
      <span id="msg"></span>
    </div>
    <div class="row">
      <button class="primary" onclick="openLauncher()">Open App Launcher</button>
      <button class="primary" onclick="openSnippetPanel()">Open Clipboard Snippets</button>
      <button class="ghost" onclick="openDataToolsPanel()">Open Data Import / Export</button>
    </div>
  </div>

  <div id="launcherPanel" class="panel">
    <div class="row">
      <span class="panel-title">App Launcher</span>
      <div class="launcher-header-actions">
        <button class="primary" onclick="showCreateDialog()">Create</button>
        <button id="toggleDeleteButton" class="ghost" onclick="toggleDeleteMode()">Delete</button>
        <button class="ghost" onclick="goHome()">Home</button>
      </div>
    </div>

    <div id="createDialog">
      <div class="form-row">
        <label for="appName">App Name</label>
        <input id="appName" type="text" placeholder="Example: Work Docs" />
      </div>

      <div class="form-row">
        <label for="folderPath">Folder Path</label>
        <input id="folderPath" type="text" placeholder="Example: C:\\Users\\You\\Documents" />
      </div>

      <div id="createError"></div>

      <div class="row">
        <button class="primary" onclick="createLauncherButton()">Confirm</button>
        <button class="ghost" onclick="hideCreateDialog()">Cancel</button>
      </div>
    </div>

    <div id="launcherButtons"></div>
    <div id="launcherStatus"></div>
  </div>

  <div id="snippetPanel" class="panel">
    <div class="row">
      <span class="panel-title">Clipboard Snippets</span>
      <div class="snippet-header-actions">
        <button class="primary" onclick="showSnippetCreateDialog()">Create</button>
        <button id="toggleSnippetDeleteButton" class="ghost" onclick="toggleSnippetDeleteMode()">Delete</button>
        <button class="ghost" onclick="goHome()">Home</button>
      </div>
    </div>

    <div id="snippetCreateDialog">
      <div class="form-row">
        <label for="snippetName">Snippet Name</label>
        <input id="snippetName" type="text" placeholder="Example: Team Standup Update" />
      </div>

      <div class="form-row">
        <label for="snippetContent">Snippet Content</label>
        <textarea id="snippetContent" placeholder="Write the text you want copied when clicking this snippet button."></textarea>
      </div>

      <div id="snippetCreateError"></div>

      <div class="row">
        <button class="primary" onclick="createSnippetButton()">Confirm</button>
        <button class="ghost" onclick="hideSnippetCreateDialog()">Cancel</button>
      </div>
    </div>

    <div id="snippetButtons"></div>
    <div id="snippetStatus"></div>
  </div>

  <div id="dataToolsPanel" class="panel">
    <div class="row">
      <span class="panel-title">Data Import / Export</span>
      <div class="snippet-header-actions">
        <button class="ghost" onclick="goHome()">Home</button>
      </div>
    </div>

    <div class="info-note">
      Note for future maintenance: <strong>the <code>.opdb</code> file is user-specific and should stay next to each user's app copy.</strong>
      Do not share or manually edit <code>.opdb</code>; use export/import <code>.txt</code> for readable transfer.
    </div>

    <div class="form-row">
      <label for="dataTxtPath">Readable TXT Path</label>
      <input id="dataTxtPath" type="text" placeholder="Example: C:\\Users\\You\\Documents\\originplanet_export.txt" />
    </div>

    <div class="row">
      <button class="primary" onclick="exportDataToTxt()">Export to TXT</button>
      <button class="primary" onclick="importDataFromTxt()">Import from TXT</button>
    </div>

    <div id="dataToolsStatus"></div>
  </div>

</body>
</html>
